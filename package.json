{
  "name": "basekit",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "bump-ui": "npx shadcn@latest add --all --overwrite -c packages/ui",
    "web": "pnpm --filter web",
    "clean": "turbo run clean && rm -rf node_modules",
    "prepare": "husky",
    "generate-env-types": "pnpm --filter @repo/env generate-env-types",
    "setup": "./scripts/setup-env.sh",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "db:reset": "docker compose down -v && docker compose up -d",
    "db:seed": "pnpm --filter @repo/api db:seed",
    "db:seed:admin": "pnpm --filter @repo/api db:seed:admin"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.4",
    "husky": "^9.0.0",
    "lint-staged": "^16.0.0",
    "pg": "^8.16.3",
    "prettier": "^3.7.4",
    "turbo": "^2.7.2",
    "typescript": "5.9.2"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
