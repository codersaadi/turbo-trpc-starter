    "lodash-es": "^4.17.21",
    "negotiator": "^1.0.0",
    "next-i18n-router": "^5.5.1",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "react-i18next": "^15.4.1",
    "resolve-accept-language": "^3.1.15",
    "rtl-detect": "^1.1.2",
    "server-only": "^0.0.1"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
