{
  "name": "@repo/api",
  "version": "1.0.0",
  "private": true,
  "description": "API - Private tRPC routers, services, and data layer",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./index.ts",
      "require": "./index.ts"
    },
    "./transformer": {
      "types": "./dist/transformer.d.ts",
      "import": "./transformer.ts",
      "require": "./transformer.ts"
    },
    "./server/*": {
      "types": "./dist/server/*.d.ts",
      "import": "./server/*.ts",
      "require": "./server/*.ts"
    }
  },
  "main": "./index.ts",
  "module": "./index.ts",
  "types": "./dist/index.d.ts",
  "scripts": {
    "type-check": "tsc --noEmit --emitDeclarationOnly false",
    "build": "rimraf dist && tsc && tsc-alias",
    "build:watch": "tsc --watch",
    "dev": "tsc",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:pull": "drizzle-kit pull",
    "db:studio": "drizzle-kit studio",
    "db:check": "drizzle-kit check",
    "db:seed": "tsx server/db/seed/index.ts",
    "db:seed:admin": "tsx server/db/seed/default-admin.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.864.0",
    "@aws-sdk/client-sesv2": "^3.958.0",
    "@aws-sdk/client-sns": "^3.856.0",
    "@aws-sdk/s3-request-presigner": "^3.856.0",
    "@better-auth/expo": "^1.4.9",
    "@better-fetch/fetch": "^1.1.21",
    "@google-cloud/vision": "^5.3.2",
    "@neondatabase/serverless": "^1.0.1",
    "@paralleldrive/cuid2": "^2.2.2",
    "@react-email/components": "0.3.3",
    "@react-email/render": "1.1.4",
    "@repo/env": "workspace:*",
    "@tanstack/react-query": "^5.83.0",
    "@trpc/client": "^11.4.3",
    "@trpc/server": "^11.4.3",
    "@types/nodemailer": "^6.4.17",
    "apn": "^2.2.0",
    "argon2": "^0.44.0",
    "axios": "^1.11.0",
    "better-auth": "^1.3.4",
    "cheerio": "^1.1.2",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.4",
    "expo-server-sdk": "^4.0.0",
    "firebase-admin": "^13.4.0",
    "next": "16.1.0",
    "nodemailer": "^7.0.5",
    "openai": "^6.15.0",
    "p-limit": "^7.1.0",
    "pg": "^8.16.3",
    "pg-boss": "^10.3.2",
    "pino": "^9.7.0",
    "pino-pretty": "^13.1.1",
    "puppeteer": "^24.15.0",
    "react-dom": "^19.0.0",
    "resend": "^4.7.0",
    "sharp": "^0.34.3",
    "superjson": "^2.2.2",
    "svix": "^1.69.0",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.3",
    "twilio": "^5.10.0",
    "uuid": "^11.1.0",
    "ws": "^8.18.3",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@types/node": "24.1.0",
    "@types/pg": "^8.15.5",
    "@types/react": "^19.1.9",
    "@types/twilio": "^3.19.3",
    "@types/ws": "^8.18.1",
    "drizzle-kit": "^0.31.4",
    "pino-pretty": "13.1.1",
    "react": "^19.0.0",
    "rimraf": "^6.0.1",
    "tsc-alias": "^1.8.16",
    "tsup": "^8.5.0",
    "tsx": "^4.20.3",
    "typescript": "5.9.2",
    "vitest": "^3.2.4"
  }
}
